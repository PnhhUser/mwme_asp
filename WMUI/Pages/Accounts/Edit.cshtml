@page "{id:int}"
@model Accounts.EditModel
@{
    ViewData["Title"] = "Chỉnh sửa tài khoản";
}

<h2>Chỉnh sửa tài khoản</h2>

<form method="post" enctype="multipart/form-data">
    <div asp-validation-summary="ModelOnly" class="text-danger"></div>

    <div class="mb-3">
        <label asp-for="Username" class="form-label"></label>
        <input asp-for="Username" class="form-control" />
        <span asp-validation-for="Username" class="text-danger"></span>
    </div>

    <div class="mb-3">
        <label asp-for="Password" class="form-label">Mật khẩu mới (nếu muốn đổi)</label>
        <input asp-for="Password" class="form-control" type="password" />
        <span asp-validation-for="Password" class="text-danger"></span>
    </div>

    <div class="mb-3">
        <label asp-for="Avatar" class="form-label">Ảnh hiện tại</label><br />
        @if (!string.IsNullOrEmpty(Model.CurrentImageUrl))
        {
            <img src="@Url.Content($"~/Images/Avatars/{Model.CurrentImageUrl}")" alt="avatar" width="150"
                class="img-thumbnail mb-2" />
        }
        <input asp-for="Avatar" class="form-control" type="file" />
        <span asp-validation-for="Avatar" class="text-danger"></span>
    </div>

    <div class="form-check mb-3">
        <input asp-for="IsActived" class="form-check-input" type="checkbox" />
        <label asp-for="IsActived" class="form-check-label">Kích hoạt</label>
    </div>

    <button type="submit" class="btn btn-primary">Lưu thay đổi</button>
    <a asp-page="/Accounts/Index" class="btn btn-secondary">Hủy</a>
</form>