@page
@using Microsoft.AspNetCore.Components.Web
@model Accounts.IndexModel
@{
    ViewData["Title"] = "Accounts page";
}

<div class="flex">
    <a asp-page="/Accounts/Add" class="btn btn-primary">Thêm</a>
</div>

<Table class="table table-hover">
    <thead>
        <tr>
            <th>#</th>
            <th>Name</th>
            <th>Ngày tạo</th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var acc in Model.AccountModels)
        {
            <tr>
                <td>@acc.Id</td>
                <td>@acc.Name</td>
                <td>@acc.CreatedDate.ToLocalTime().ToString("dd/MM/yyyy HH:mm")</td>
                <td>
                    <a asp-page="/Accounts/View" asp-route-id="@acc.Id">Xem</a>
                    <a asp-page="/Accounts/Edit" asp-route-id="@acc.Id">Sửa</a>
                    <span data-id="@acc.Id" data-title="Thông báo xóa" class="remove text-danger"
                        style="cursor: pointer;">Xóa</span>
                </td>
            </tr>
        }
    </tbody>
</Table>


<div class="modal" id="modal-remove" tabindex="-1">
    <div class="modal-dialog">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title"></h5>
                <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
            </div>
            <div class="modal-body">
                <p>Modal body text goes here.</p>
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">
                    Close
                </button>
                <button type="button" class="btn btn-primary">Save changes</button>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <script src="~/js/UIUtils.js"></script>
    <script src="~/js/account.js"></script>
}